package dev.duttech.card;

/*
 * This class will help to create the deck of cards.
 * Attributes or Member variables of the class is: 
 * 		Suits (Heart, Spade, Club, Diamond)
 * 		Face(Ace, King, Queen, Jack, number from 2 to 10)
 *  	Rank
 * */

enum Suit{HEART, SPADE, CLUB, DIAMOND;}

public class Card {
	
	private Suit suit;
	private String faceValue;
	private int rank;
	
	
	
	public Card(Suit suit, String faceValue) {
		
		this.suit = suit;
		
		if(!(faceValue.equalsIgnoreCase("ace")
				||
			faceValue.equalsIgnoreCase("king")
				||
			faceValue.equalsIgnoreCase("queen")
				||
			faceValue.equalsIgnoreCase("Jack")) 
			)	
		{
			Card(faceValue);
			
		}
	}
	
	public Card(String faceValue) {
		rank = Integer.valueOf(faceValue);
	}
	

}
