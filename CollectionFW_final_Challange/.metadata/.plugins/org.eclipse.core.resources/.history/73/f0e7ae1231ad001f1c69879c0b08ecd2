		// TODO Auto-generated method stub
		
		Product darkRoast = new Product("DR-1","Dark Roast","BRCC",new Category("Coffee"));
		Product blackMug = new Product("mug-blk-1","black mug","BRCC",new Category("Merchandise"));
		Product afTag = new Product("af-f7-1","F7 Tag","Air Force",new Category("Merchandise"));
		
		InventoryItem drCoffee = new InventoryItem(darkRoast,10,4.50);
